
@model CloudWebMVC.Models.User
@{
    ViewBag.Title = "Image uploader";
}
<h2>@ViewBag.Title.</h2>
<h3>@ViewBag.Message</h3>

<form action="/File/Upload"
      class="dropzone"
      id="my-awesome-dropzone"></form>


<div class="jumbotron" id="fileContainer">
    <div class="row">
        @foreach (var item in Model.FileNames)
        {

            <div class="col-sm-6 col-md-4" style="margin-top: 10px;">
                <div class="thumbnail">
                    <img src="@Url.Action("GetFiles", "File", new { fileName = item })" alt="">
                    <div class="caption">
                        <h3>@item.Substring(@item.IndexOf("_") + 1)</h3>
                        <p><a href="#" class="btn btn-primary" role="button" data-toggle="modal" data-target="#imageModal" onclick="$('#imageToShow').attr('src', '/File/GetFiles?fileName=@item');">Preview</a></p>
                    </div>
                </div>
            </div>
        }

    </div>
</div>

<div class="modal fade" id="imageModal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">Modal title</h4>
            </div>
            <div class="modal-body">
                <img src="" style="width:100%;height:100%;" id="imageToShow"/>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
